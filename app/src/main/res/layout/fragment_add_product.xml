   <RelativeLayout
       android:layout_margin="10dp"

       android:id="@+id/core"
       android:layout_centerInParent="true"

       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <LinearLayout

           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:id="@+id/fleftlay"

           android:layout_height="wrap_content">
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Name"
               android:id="@+id/fname"
               android:textSize="25sp"
               android:textStyle="bold"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cost"
               android:id="@+id/fcost"
               android:textSize="25sp"
               android:textStyle="bold"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Image"
               android:id="@+id/fimage"
               android:textSize="25sp"
               android:textStyle="bold"
               />
           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Desription"
               android:id="@+id/fdescription"
               android:textSize="25sp"
               android:textStyle="bold"
               />
       </LinearLayout>
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/fleftlay"
           android:id="@+id/frightlayout">
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Product name"
               android:id="@+id/feditname"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter Product cost"
               android:id="@+id/feditcost"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter image url"
               android:id="@+id/feditimage"/>
           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Enter product description"
               android:id="@+id/feditdesription"/>
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="20dp"
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/fleftlay"
           android:id="@+id/flaythree">
           <Button

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                android:text="Add"
               android:layout_marginLeft="100dp"
               android:textAllCaps="false"
               android:id="@+id/fadd"/>
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Cancel"
               android:layout_marginLeft="10dp"
               android:textAllCaps="false"
               android:id="@+id/fcancel"/>
       </LinearLayout>
   </RelativeLayout>

</RelativeLayout>
